<div class="row mt-5">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control my-2" placeholder="Enter Name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control my-2" placeholder="Enter Email"
            value="{{email}}">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control my-2" placeholder="Enter Password"
            value="{{password}}">
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control my-2"
            placeholder="Confirm Password" value="{{confirmPassword}}">
        </div>
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-outline-light my-2" style="background-color: #e95420;">Register</button>
          <a href="/auth/facebook" class="btn btn-outline-light my-2" style="background-color: #85b2ee;">Facebook</a>
        </div>
      </form>
      <p class="lead mt-4">
        Have An Account? <a href="/users/login" class="text-decoration-none" style="color: #e95420;">Login</a>
      </p>
    </div>
  </div>
</div>