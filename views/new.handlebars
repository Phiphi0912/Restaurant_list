<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <form action="/restaurant/create" method="post">
        <div class="form-group form-row">
          <label for="name" class="col-md-4 col-form-label">店名<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="text" class="form-control" id="name" placeholder="XXX 餐廳" name="name" required />
          </div>
        </div>

        <div class="form-group form-row">
          <label for="name_en" class="col-md-4 col-form-label">英文店名<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="text" class="form-control" id="name_en" placeholder="XXX Restaurant" name="name_en" required />
          </div>
        </div>

        <div class="form-group form-row">
          <label for="category" class="col-md-4 col-form-label">種類<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="text" list="categoryOptions" class="form-control" id="category" name="category" required />
            <datalist id="categoryOptions">
              <option>美式</option>
              <option>日本料理</option>
              <option>義式餐廳</option>
              <option>咖啡</option>
              <option>酒吧</option>
              <option>中東料理</option>
            </datalist>
          </div>
        </div>

        <div class="form-group form-row">
          <label for="image" class="col-md-4 col-form-label">圖片連結<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="text" class="form-control" id="image" name="image" required />
          </div>
        </div>

        <div class="form-group form-row">
          <label for="location" class="col-md-4 col-form-label">地址<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="text" class="form-control" id="location" name="location" required />
          </div>
        </div>

        <div class="form-group form-row">
          <label for="phone" class="col-md-4 col-form-label">電話<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="tel" class="form-control" id="phone" placeholder="02-23456789" name="phone" required />
          </div>
        </div>

        <div class="form-group form-row">
          <label for="google_map" class="col-md-4 col-form-label">Google 地圖連結<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="url" class="form-control" id="google_map" name="google_map" required />
          </div>
        </div>

        <div class="form-group form-row">
          <label for="rating" class="col-md-4 col-form-label">評分<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="Number" class="form-control" id="rating" name="rating" min="0" max="5" step="0.1" required />
          </div>
        </div>

        <div class="form-group form-row">
          <label for="description" class="col-md-4 col-form-label">餐廳描述<span class="text-danger">*</span></label>
          <div class="col-md-8">
            <input type="text" class="form-control" id="description" name="description" required />
          </div>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary">
            新增餐廳
          </button>
          <a href="/">
            <button type="button" class="btn btn-outline-secondary">
              返回首頁
            </button>
          </a>
          <button type="reset" class="btn btn-outline-danger">重新輸入</button>
        </div>
      </form>
    </div>
  </div>
</div>